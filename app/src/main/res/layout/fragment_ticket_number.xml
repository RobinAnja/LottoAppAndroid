<?xml version="1.0" encoding="utf-8"?>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".ui.main.TicketNumberFragment">

        <LinearLayout
            android:id="@+id/ticket_nbr_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/plus_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_shape_top"
                app:srcCompat="@drawable/plus"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/ticket_nbr"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="TextView"
                android:background="#BFC3C7"
                android:textColor="#ffffff"
                android:gravity="center"
                />

            <ImageButton
                android:id="@+id/minus_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_shape_bottom"
                app:srcCompat="@drawable/minus"
                android:layout_gravity="center"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
